[
  {
    "database": "postgres",
    "index": "datadoc_index",
    "setting": {
      "analysis": {
        "analyzer": {
          "vi_analyzer": {
            "filter": [
              "lowercase"
            ],
            "type": "custom",
            "tokenizer": "vi_tokenizer"
          }
        },
        "tokenizer": {
          "vi_tokenizer": {
            "token_chars": [
              "letter",
              "digit",
              "punctuation",
              "symbol"
            ],
            "min_gram": "9",
            "type": "ngram",
            "max_gram": "10"
          }
        }
      }
    },
    "nodes": {
      "table": "datadoc",
      "columns": [
        "article_id",
        "topic",
        "href",
        "publish_date",
        "newspaper",
        "created_date",
        "language",
        "sapo",
        "content",
        "feature_image"
      ],
      "transform": {
        "mapping": {
          "article_id": {
            "type": "text",
            "copy_to": "article_id"
          },
          "topic": {
            "type": "text",
            "copy_to": "topic",
            "fields":{
              "ngram": {
                  "type": "text",
                  "analyzer": "vi_analyzer",
                  "search_analyzer": "vi_analyzer",
                  "fielddata": true
              }
          }
          },
          "href": {
            "type": "text",
            "copy_to": "href"
          },
          "publish_date": {
            "type": "date",
            "copy_to": "publish_date"
          },
          "newspaper": {
            "type": "keyword",
            "copy_to": "newspaper"
          },
          "created_date": {
            "type": "date",
            "copy_to": "created_date"
          },
          "language": {
            "type": "text",
            "copy_to": "language"
          },
          "sapo": {
            "type": "text",
            "copy_to": "sapo"
          },
          "content": {
            "type": "text",
            "copy_to": "content",
            "fields":{
              "ngram": {
                  "type": "text",
                  "analyzer": "vi_analyzer",
                  "search_analyzer": "vi_analyzer",
                  "fielddata": true
              }
          }
          },
          "feature_image": {
            "type": "text",
            "copy_to": "feature_image"
          }
        }
      }
    }
  },
